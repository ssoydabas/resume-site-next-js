{
  "extends": ["next/core-web-vitals", "plugin:prettier/recommended"],
  "plugins": ["unused-imports"],
  "rules": {
    "no-unused-vars": "warn",
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ]
  },
  "ignorePatterns": ["use-toast.ts", "Projects.tsx"]
}
